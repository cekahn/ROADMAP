{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "ROADMAP.json",
	"title": "ROADMAP",
	"description": "ROADMAP document schema desribes a Project with zero or more Models and zero or more Datasets.",
	"$comment": "ROADMAP:00010",
	"type": "object",
	"properties": {
		"ROADMAP version": {
			"type": "string",
			"const": "2025-01-06"
		},
		"Project": {
			"$ref": "ROADMAP.project.json"
		},
		"Model": {
			"description": "Descriptions of each Model",
			"type": "array",
			"items": {
				"$ref": "ROADMAP.model.json"
			}
		},
		"Dataset": {
			"description": "Descriptions of each Dataset",
			"type": "array",
			"items": {
				"$ref": "ROADMAP.dataset.json"
			}
		}
	},
	"required": [
		"ROADMAP version",
		"Project"
	],
	"additionalProperties": false,
	"$defs": {
		"project": {
		}
	}
}