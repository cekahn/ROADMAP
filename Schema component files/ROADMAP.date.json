{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "ROADMAP.date.json",
	"description": "Date (Year or ISO-format date)",
	"type": [
		"string",
		"number"
	],
	"examples": [
		"2025-01-01",
		2025
	],
	"if": {
		"type": "string"
	},
	"then": {
		"format": "date"
	},
	"else": {
		"minimum": 1900,
		"maximum": 2100
	}
}