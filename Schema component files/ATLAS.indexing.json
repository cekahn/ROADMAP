{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "ATLAS.indexing.json",
	"title": "Indexing codes: Content codes, RadLex, SNOMED, and keywords",
	"$comment": "Copyright (c) 2025, Radiological Society of North America",
	"type": "object",
	"properties": {
		"Content": {
			"description": "Array of RSNA 2-letter content code, e.g., CT",
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"type": "string",
				"enum": [
					"AI",
					"BR",
					"BQ",
					"CA",
					"CH",
					"CT",
					"DM",
					"ED",
					"ER",
					"GI",
					"GU",
					"HN",
					"HP",
					"IN",
					"IR",
					"LM",
					"MI",
					"MK",
					"MR",
					"NM",
					"NR",
					"OB",
					"OI",
					"OT",
					"PD",
					"PH",
					"PR",
					"SQ",
					"RO",
					"RS",
					"US",
					"VA"
				],
				"examples": [
					"AI",
					"CT",
					"GI"
				]
			}
		},
		"RadLex": {
			"description": "Array of RadLex codes (with optional labels)",
			"$comment": "https://radlex.org/RID/$",
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"anyOf": [
					{
						"type": "string",
						"pattern": "RID[0-9]+",
						"examples": [
							"RID58",
							"RID1169"
						]
					},
					{
						"type": "object",
						"patternProperties": {
							"RID[0-9]+": {
								"type": "string"
							}
						},
						"additionalProperties": false,
						"examples": [
							{
								"RID58": "liver"
							}
						]
					}
				],
				"examples": [
					"RID58",
					"RID1169",
					{
						"RID58": "liver"
					}
				]
			}
		},
		"SNOMED": {
			"description": "Array of SNOMED CT codes",
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"anyOf": [
					{
						"type": "string",
						"examples": [
							"10200004"
						]
					},
					{
						"type": "object",
						"patternProperties": {
							"[A-Z0-9]+": {
								"type": "string"
							}
						},
						"additionalProperties": false,
						"examples": [
							{
								"10200004": "Liver structure (body structure)"
							},
							{
								"441802002": "Imaging of liver (procedure)"
							}
						]
					}
				],
				"examples": [
					"10200004",
					{
						"10200004": "Liver structure (body structure)"
					},
					{
						"441802002": "Imaging of liver (procedure)"
					}
				]
			}
		},
		"Keywords": {
			"description": "Array of keywords to index the Project",
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"type": "string"
			}
		}
	},
	"additionalProperties": false
}